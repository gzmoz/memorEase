<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/frame_layout"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UploadVoiceFragment">

    <!-- Üstteki Mavi Bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#76AADB" />

    <!-- İçerik Alanı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Upload a voice"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Please select and play the voice file."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Ses Dosyası Oynatma Butonu -->
        <Button
            android:id="@+id/playVoiceButton"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#76AADB"
            android:text="Play Voice"
            android:fontFamily="@font/montserratblack"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="28dp"
            android:text="Please enter a comment about the memory."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Yorum Girişi -->
        <EditText
            android:id="@+id/commentBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_text_border"
            android:hint="This is my son Jack's voice."
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Upload Butonu -->
        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#008066"
            android:padding="10dp"
            android:text="Upload"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>
