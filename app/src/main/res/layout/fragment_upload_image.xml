<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/frame_layout"
    tools:context=".UploadImageFragment">

    <!-- Üstteki Mavi Bar -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#76AADB" />

    <!-- İçerik Alanı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="Upload an image"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Yüklenen Görsel -->
        <ImageView
            android:id="@+id/addImageButton"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="36dp"
            android:contentDescription="Uploaded Image"
            android:src="@drawable/addphoto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Please enter a comment about the memory."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Yorum Girişi -->
        <EditText
            android:id="@+id/commentBox"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/edit_text_border"
            android:hint="Taking a photo with my granddaughter."
            android:padding="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="16sp" />

        <!-- Upload Butonu -->
        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#008066"
            android:padding="10dp"
            android:text="Upload"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>
